<h1>New games</h1>
<%= @letters %>

<form action="/score" method="post">
  <label>What is the longest word you can find?</label>
  <input type="text" name="game" placeholder="Tape your word here">
  <input type="submit">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>

<%= @score %>